server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    # Handle 404 errors by serving React's index.html (prevents route errors)
    error_page 404 /index.html;

    # Optional: Proxy requests to the backend API
    location /api/ {
        proxy_pass http://backend-service.mern-namespace.svc.cluster.local:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
